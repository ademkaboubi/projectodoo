<odoo>
  <!-- Action pour afficher les sociétés -->
  <record id="action_tn_societe" model="ir.actions.act_window">
    <field name="name">Sociétés</field>
    <field name="res_model">tn.societe</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">Créer des sociétés (nom uniquement).</p>
    </field>
  </record>

  <menuitem id="menu_societe_root"
            name="Sociétés"
            sequence="16"/>

  <!-- Sous-menu avec l'action -->
  <menuitem id="menu_societe_list"
            name="Liste des sociétés"
            parent="menu_societe_root"
            action="action_tn_societe"
            sequence="10"/>

  <!-- Vue liste -->
  <record id="view_tn_societe_tree" model="ir.ui.view">
    <field name="name">tn.societe.tree</field>
    <field name="model">tn.societe</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
      </tree>
    </field>
  </record>

  <!-- Vue formulaire -->
  <record id="view_tn_societe_form" model="ir.ui.view">
    <field name="name">tn.societe.form</field>
    <field name="model">tn.societe</field>
    <field name="arch" type="xml">
      <form string="Société">
        <sheet>
          <group>
            <field name="name"/>
          </group>

          <!-- Notebook with empty pages -->
          <notebook>
            <page string="Informations générales">
              <group>
                <!-- Add fields here later -->
              </group>
            </page>
